import random
import string
import time

def greet_user():
    print("=" * 45)
    print("        Custom Password Generator v1.0")
    print("       (Just a simple Python project)")
    print("=" * 45)
    time.sleep(1)

def get_password_strength():
    print("\nChoose password strength:")
    print(" 1. Easy (letters only)")
    print(" 2. Medium (letters + numbers)")
    print(" 3. Strong (letters + numbers + symbols)")

    while True:
        choice = input("Enter your choice (1, 2, or 3): ").strip()
        if choice in ['1', '2', '3']:
            return int(choice)
        else:
            print("Invalid input. Please enter 1, 2, or 3.")

def get_password_length():
    while True:
        user_input = input("Enter password length (4 to 64): ").strip()
        if user_input.isdigit():
            length = int(user_input)
            if 4 <= length <= 64:
                return length
            else:
                print("Length must be between 4 and 64.")
        else:
            print("Please enter a valid number.")

def generate_password(strength, length):
    if strength == 1:
        chars = string.ascii_letters
    elif strength == 2:
        chars = string.ascii_letters + string.digits
    else:
        chars = string.ascii_letters + string.digits + "!@#$%^&*()-_=+[]{}|;:,.<>?/"

    password = ''.join(random.choice(chars) for _ in range(length))
    return ''.join(random.sample(password, len(password)))  # extra shuffle

def main():
    greet_user()

    while True:
        strength = get_password_strength()
        length = get_password_length()
        password = generate_password(strength, length)

        print("\nGenerated Password:")
        print(password)

        again = input("\nGenerate another password? (y/n): ").lower()
        if again != 'y':
            print("Goodbye!")
            break

if __name__ == "__main__":
    main()
